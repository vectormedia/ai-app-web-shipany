# -----------------------------------------------------------------------------
# General App Settings
# -----------------------------------------------------------------------------
# The full public URL of your application (e.g., https://myapp.com)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# The name of your application
NEXT_PUBLIC_APP_NAME="ShipAny"

# Default theme and appearance ('light', 'dark', 'system')
NEXT_PUBLIC_THEME="default"
NEXT_PUBLIC_APPEARANCE="system"

# Default language locale
NEXT_PUBLIC_DEFAULT_LOCALE="en"

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# A secret key for signing authentication tokens.
# Generate one with: openssl rand -base64 32
AUTH_SECRET=""

# The full URL to your auth backend, defaults to NEXT_PUBLIC_APP_URL
AUTH_URL=""

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# Full connection string for your database (e.g., postgresql://user:pass@host:port/db)
DATABASE_URL=""

# Database provider ('postgresql', 'mysql', 'sqlite')
DATABASE_PROVIDER="postgresql"

# Enable database singleton (recommended: 'false' for serverless, 'true' for long-running servers)
DB_SINGLETON_ENABLED="false"

# -----------------------------------------------------------------------------
# Social Logins
# -----------------------------------------------------------------------------
# Google OAuth Credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth Credentials
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# -----------------------------------------------------------------------------
# Payment Providers
# -----------------------------------------------------------------------------
# Set the default payment provider ('stripe', 'paypal', 'creem')
DEFAULT_PAYMENT_PROVIDER="stripe"

# Stripe Configuration
STRIPE_ENABLED="false"
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_SIGNING_SECRET="" # Webhook signing secret

# PayPal Configuration
PAYPAL_ENABLED="false"
PAYPAL_CLIENT_ID=""
PAYPAL_CLIENT_SECRET=""
PAYPAL_ENVIRONMENT="sandbox" # 'sandbox' or 'production'

# Creem Configuration
CREEM_ENABLED="false"
CREEM_API_KEY=""
CREEM_SIGNING_SECRET="" # Webhook signing secret
CREEM_ENVIRONMENT="sandbox" # 'sandbox' or 'production'